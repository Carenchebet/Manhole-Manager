<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:background="@drawable/round_corners"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTechnicianName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Technician Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTechnicianId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Technician ID"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvTechnicianName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvExpertise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Expertise"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvTechnicianId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvExpertise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvAvailabilityStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Availability"
        android:textSize="14sp"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
